<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Project.ViewModels"
             x:Class="Project.Views.HomePage"
             Title="HomePage">
    <ContentPage.BindingContext>
        <viewModels:HomeViewModel />
    </ContentPage.BindingContext>

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="Search"
                     Command="{Binding GoToSearchProductPageCommand}"
                     IconImageSource="magnifying_glass.png" />
    </ContentPage.ToolbarItems>-->
    
    <VerticalStackLayout>
        <Label 
            Text="WELCOME!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="#F55951"
            Margin="0, 40, 0, 0"
            FontSize="Large"/>
        <Image Source="home_page.png"
            HeightRequest="400"
            WidthRequest="400"></Image>
        <Label 
            Text="What do you call a cow in an earthquake? &#10;A milkshake." 
            HorizontalTextAlignment="Center"
            FontSize="Small"
            VerticalOptions="Center" 
            HorizontalOptions="Center"></Label>
        <Button Text="FIND YOUR RECIPE"
                Command="{Binding GoToSearchProductPageCommand}"
                Margin="40"
                WidthRequest="300"></Button>
    </VerticalStackLayout>
</ContentPage>