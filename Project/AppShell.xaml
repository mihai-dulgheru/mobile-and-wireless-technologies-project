<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Project.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="SearchProductPage"
                  ContentTemplate="{DataTemplate views:SearchProductPage}"
                  Route="SearchProductPage" />

    <ShellContent Title="ProductPage"
                  ContentTemplate="{DataTemplate views:ProductPage}"
                  Route="ProductPage" />

    <ShellContent Title="HomePage"
                  ContentTemplate="{DataTemplate views:HomePage}"
                  Route="HomePage" />

</Shell>
