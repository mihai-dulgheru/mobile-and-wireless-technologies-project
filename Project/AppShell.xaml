<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Project.Views"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem Title="Home"
                Icon="house.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Search Product"
                Icon="magnifying_glass.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:SearchProductPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Product"
                Icon="bowl_food.png">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:ProductPage}" />
        </Tab>
    </FlyoutItem>

</Shell>
